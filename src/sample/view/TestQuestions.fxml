<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TestsController">
    <Label fx:id="questNumber" alignment="TOP_CENTER" layoutX="169.0" layoutY="22.0" prefHeight="200.0"
           prefWidth="200.0" AnchorPane.bottomAnchor="350.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
           AnchorPane.topAnchor="20.0"/>
    <Label fx:id="questTest" alignment="TOP_CENTER" layoutX="182.0" layoutY="50.0" prefHeight="200.0" prefWidth="200.0"
           AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
           AnchorPane.topAnchor="60.0"/>
    <GridPane fx:id="gridPane" alignment="TOP_CENTER" layoutX="200.0" layoutY="192.0" AnchorPane.bottomAnchor="88.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="192.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <children>
            <Label fx:id="label0" text="Label" GridPane.rowIndex="0" onMouseClicked="#answerAction"/>
            <Label fx:id="label1" text="Label" GridPane.rowIndex="1" onMouseClicked="#answerAction"/>
            <Label fx:id="label2" text="Label" GridPane.rowIndex="2" onMouseClicked="#answerAction"/>
            <Label fx:id="label3" text="Label" GridPane.rowIndex="3" onMouseClicked="#answerAction"/>
        </children>
    </GridPane>
    <Button fx:id="exitBtn" layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#exitAction"
            prefWidth="100.0" text="Выход"/>
    <Label fx:id="score" layoutX="250.0" layoutY="359.0" prefHeight="30.0" prefWidth="100.0" text="Рейтинг:"/>
</AnchorPane>
